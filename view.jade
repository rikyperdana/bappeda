template(name='layout')
	+menu
	+yield

template(name='menu')
	.navbar-fixed: nav.green: .nav-wrapper
		ul.left
			li: a Beranda
			li: a Panduan
		a.brand-logo.center SIPD
		ul.right
			unless currentUser
				li: a Login
			else
				li: a= currentUser
				li: a Logout
	ul.fixed.side-nav
		li.grey.lighten-2: a Pilihan Urusan
		each val in menus
			li: a(href='/titik/{{val}}')= startCase(val)

template(name='home')
	h5 Beranda

template(name='titik')
	#peta
	br
	.container
		.row
			.col.m5: .input-field: select#bentuk
				option(value='') Pilih Bentuk
				each i in filter 'bentuk'
					option(value=i)= startCase(i)
			.col.m5: .input-field: select#kondisi
				option(value='') Pilih Kondisi
				each i in filter 'kondisi'
					option(value=i)= startCase(i)
			.col.m2: .right.btn#add Tambah
		unless showForm
			br
			table.bordered
				thead
					tr
						each val in heads
							th= startCase(val)
						th Hapus
				tbody
					each i in rows
						tr
							each j in heads
								td {{startCase (prop i j)}}
							td: a#remove(data=i._id) Hapus
		if showForm
			br
			br
			+quickForm(
				collection = coll.titik
				schema = schema
				type = formType
				id = 'formTitik'
				doc = doc
			)
